<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainPageActivity">

    <Button
        android:id="@+id/profile1Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:textSize="25sp"
        android:layout_centerHorizontal="true"
        android:text="Profile #1" />
    <Button
        android:id="@+id/profile2Button"
        android:layout_width="wrap_content"
        android:layout_marginTop="25dp"
        android:textSize="25sp"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content"
        android:text="Profile #2"
        android:layout_below="@+id/profile1Button"/>
    <Button
        android:id="@+id/profile3Button"
        android:layout_width="wrap_content"
        android:textSize="25sp"
        android:layout_marginTop="25dp"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content"
        android:text="Profile #3"
        android:layout_below="@+id/profile2Button"/>
    <Button
        android:id="@+id/profile4Button"
        android:layout_width="wrap_content"
        android:textSize="25sp"
        android:layout_marginTop="25dp"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content"
        android:text="Profile #4"
        android:layout_below="@+id/profile3Button"/>
    <Button
        android:id="@+id/profile5Button"
        android:layout_width="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:text="Profile #5"
        android:layout_below="@+id/profile4Button"/>
</RelativeLayout>